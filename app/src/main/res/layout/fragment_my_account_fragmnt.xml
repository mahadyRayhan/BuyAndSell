<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nocturnal.buyandsell.Fragment.MyAccountFragmnt">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/user_account_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/dummy" />

            <TextView
                android:id="@+id/user_account_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Mahady Hasan Rayhan"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/user_account_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="rayhan.feluda@gmail.com"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/user_account_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Mirpur"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/user_account_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="01682860459"
                android:textAlignment="center"
                android:textSize="25sp" />
        </LinearLayout>
    </ScrollView>


</FrameLayout>
