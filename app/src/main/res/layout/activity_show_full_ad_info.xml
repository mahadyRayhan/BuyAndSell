<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nocturnal.buyandsell.Activity.ShowFullAdInfo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="520dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#e7edee"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp">

                    <ImageView
                        android:id="@+id/detaile_ad_product_first_image"
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="-4dp"
                        android:background="@drawable/edit_border"
                        android:scaleType="fitXY"
                        android:src="@drawable/nokia" />

                    <ImageView
                        android:id="@+id/detaile_ad_product_second_image"
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="-4dp"
                        android:background="@drawable/edit_border"
                        android:scaleType="fitXY"
                        android:src="@drawable/dummy" />

                    <ImageView
                        android:id="@+id/detaile_ad_product_trird_image"
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="-4dp"
                        android:background="@drawable/edit_border"
                        android:scaleType="fitXY"
                        android:src="@drawable/dummy" />

                    <ImageView
                        android:id="@+id/detaile_ad_product_forth_image"
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="-4dp"
                        android:background="@drawable/edit_border"
                        android:scaleType="fitXY"
                        android:src="@drawable/dummy" />

                    <ImageView
                        android:id="@+id/detaile_ad_product_fifth_image"
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="-4dp"
                        android:background="@drawable/edit_border"
                        android:scaleType="fitXY"
                        android:src="@drawable/dummy" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/detaile_ad_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nokia C1 64GB ram"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:background="@drawable/yellowbg">
                    <TextView
                        android:id="@+id/detaile_ad_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tk 68000"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:textColor="#000"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/detaile_ad_product_negotiable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Negotiable"
                    android:textSize="20dp"
                    android:textColor="#000"/>

            </LinearLayout>

            <TextView
                android:id="@+id/detaile_ad_product_owner_full_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="For sale by Mahady Hasan Rayhan"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detaile_ad_product_detail_discription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="detail description"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:text="Location"/>

            <TextView
                android:id="@+id/detaile_ad_product_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="Mirpur,Dhaka"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:text="Condition"/>

            <TextView
                android:id="@+id/detaile_ad_product_condition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="used"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:text="Brand"/>

            <TextView
                android:id="@+id/detaile_ad_product_brand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="iPhone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:text="Category"/>

            <TextView
                android:id="@+id/detaile_ad_product_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="Mobile phone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:text="Posted"/>

            <TextView
                android:id="@+id/detaile_ad_product_post_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginBottom="100dp"
                android:text="12 min ago"/>

        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#fff">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:paddingRight="6dp"
            android:background="@drawable/shadow_rect"
            >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    >
                    <Button
                        android:id="@+id/call_ad_owner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/cal_icon"
                        android:text="Call"
                        android:background="#129074"
                        android:textAllCaps="false"
                        android:drawablePadding="-20dp"
                        android:paddingLeft="30dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"/>
                    <Button
                        android:id="@+id/sms_ad_owner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/sms_icon"
                        android:text="SMS"
                        android:background="#129074"
                        android:textAllCaps="false"
                        android:drawablePadding="-20dp"
                        android:paddingLeft="30dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"/>
                    <Button
                        android:id="@+id/email_ad_owner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/email_icon"
                        android:text="Email"
                        android:background="#129074"
                        android:textAllCaps="false"
                        android:drawablePadding="-20dp"
                        android:paddingLeft="20dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"/>
                </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
